<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
      <th colspan="3"></th>
      <hr>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= button_to 'Show', todo_list %></td>
        <td><%= button_to 'Edit', edit_todo_list_path(todo_list) %></td>
        <td><%= button_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<br>

<%= button_to 'New Todo List', new_todo_list_todo_item_path %>
